    "url": "git+https://github.com/jarqvi/fastify-project.git"
  },
  "keywords": [
    "node",
    "fastify",
    "javascript",
    "typescript"
  ],
  "author": "MohammadHasan Akbari",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jarqvi/fastify-project/issues"
  },
  "homepage": "https://github.com/jarqvi/fastify-project#readme",
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "config": "^3.3.9",
    "dotenv": "^16.3.1",
    "envalid": "^8.0.0",
    "fastify": "^4.24.3",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "pino": "^8.16.0",
    "sequelize": "^6.33.0"
  },
  "devDependencies": {
    "@tsconfig/node18": "^18.2.2",
    "@types/config": "^3.3.2",
    "@types/node": "^20.8.7",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "eslint": "^8.51.0",
    "husky": "^8.0.3",
    "nodemon": "^3.0.1",
    "pino-pretty": "^10.2.3",
    "prettier": "^3.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx eslint --ext .ts src/ --fix && prettier --write . && tsc -p tsconfig.json && git add -A ."
    }
  }
