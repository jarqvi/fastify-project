{
  "name": "fastify-project",
  "version": "1.0.0",
  "description": "The simple fastify project",
  "main": "dist/startup/server.js",
  "types": "dist/startup/server.d.ts",
  "scripts": {
    "lint": "npx eslint --ext .ts src/",
    "format": "prettier --check .",
    "start": "npx ts-node src/startup/server.ts",
